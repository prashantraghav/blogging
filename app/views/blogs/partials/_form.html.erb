<div class="row" style="margin-bottom: 5%">
  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <%= form_for(@blog, :html=>{:class=>'form-horizontal', multipart: true}) do |form| %>
      <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <label><i class="fa fa-pencil"></i> <strong>Title</strong></label>
      </div>
      <div class="col-sm-12 col-md-12 col-sm-12 col-xs-12">
        <%= form.text_field :title, :class=>'form-control' %>
      </div>
    </div>

    <div class="row" style="margin-top:1%">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <label><i class="fa fa-edit"></i> <strong>Body</strong></label>
      </div>
      <div class="col-sm-12 col-md-12 col-sm-12 col-xs-12">
        <%= form.cktext_area :body, :ckeditor => {:language => 'en', :height=>300}, :class=>'form-control' %>
      </div>
    </div>

    <div class="row" style="margin-top:1%">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <label><i class="fa fa-camera"></i> <strong>Coverpic</strong> <small> Best fit(w:950px * h:400px)</small></label>
      </div>
      <div class="col-sm-12 col-md-12 col-sm-12 col-xs-12">
        <%= form.file_field :coverpic, :class=>'form-control' %>
      </div>
    </div>
    <div class="row clearfix form-actions" style="margin-top:1%">
      <div class="col-md-offset-4 col-md-8">
        <%= button_tag :type=>:submit, :class=>'btn btn-warning hide' do %>
          <i class="icon-eye-open  bigger-110"></i> preview
      <% end %>
        &nbsp;
        <%= button_tag :type=>:submit, :class=>'btn btn-primary' do %>
          <i class="fa fa-save"></i> Publish
      <% end %>
        &nbsp;
        <%= link_to (@blog.new_record?) ? blogs_path : blog_path(@blog) , :class=>'btn btn-default' do %>
          <i class="fa fa-undo"></i> Cancel
        <% end %>
      </div>
    </div>
  <% end %>
  </div>
</div>
